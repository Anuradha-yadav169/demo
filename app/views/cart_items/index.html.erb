<p id="notice"><%= notice %></p>
<h1>Cart Items</h1>
<div class="card-group"><br>
<% @cart_items.each do |cart_item| %>
  <div class="card-body">
    <h4><%= cart_item.product.name %></h4>
    <p class="card-text"> <%= cart_item.Quantity %>  </p>
    <p class="card-text"> <%= image_tag(cart_item.product.image, width:200) if cart_item.product.image.attached? %> 
    </p>
    <a>
     <%= link_to 'Back', { controller: 'products', action: 'index'} %><br>
     <%= link_to 'Remove from cart', cart_item_path(cart_item), method: :delete, data: {confirm: 'You sure?'}%>
    </a>
  </div>
  <% end %>
</div>
