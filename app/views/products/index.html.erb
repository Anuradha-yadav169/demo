<html>
<body>
  <%= debug session[:cart] %>
  <div class="container">
    <h3>STOCK LIST</h3>
    <div>
      <%= link_to 'Add Product', new_product_path %>
    </div><br>
    <div class="card-group"><br>
      <% @products.each do |product| %>
      <div class="card-body">
        <h4 ><%= product.name %></h4>
        <p class="card-text"> <%= product.price %>  </p>
        <p class="card-text"> <%= product.description %>  </p>
        <p class="card-text"> <%= image_tag(product.image, width:200) if product.image.attached? %> 
        </p>
        <div>
         <%= link_to "add To Cart", cart_items_path(product.id), method: :post %>
         </div>
        <div>
         <%= link_to "Remove To Cart", cart_items_path(product.id), method: :delete, data: {confirm: 'You sure?'} %>
        </div>
        
        <a><%= link_to 'Show', product_path(product) %>   
          <%= link_to 'Edit', edit_product_path(product) %>   
          <%= link_to 'Delete', product_path(product), method: :delete %>
        </a>
      </div>
      <% end %>
    </div>
    <div>
      <%= link_to 'Back', { controller: 'products', action: 'index'} %>   
    </div>
  </div>
</body>   
</html> 
